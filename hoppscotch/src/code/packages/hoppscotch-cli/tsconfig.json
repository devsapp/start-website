{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "outDir": ".",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true
  },
  "files": ["package.json"]
}
