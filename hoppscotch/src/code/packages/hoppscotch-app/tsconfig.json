{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/i18n",
      "@nuxtjs/toast",
      "@nuxtjs/sentry",
      "@nuxtjs/color-mode",
      "@nuxtjs/axios"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"],
  "vueCompilerOptions": {
    "experimentalCompatMode": 2
  }
}
